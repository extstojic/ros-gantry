<?xml version="1.0"?>
<robot name="gantry_robot">
  <!-- World link for Gazebo compatibility -->
  <link name="world"/>

  <!-- Base link for drag&bot integration -->
  <link name="robot_base">
    <visual>
      <geometry>
        <box size="1.0 0.8 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.0 0.8 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Fixed joint from world to robot_base (for Gazebo) -->
  <joint name="world_to_robot_base" type="fixed">
    <parent link="world"/>
    <child link="robot_base"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
  </joint>

  <link name="x_rail_left">
    <visual>
      <geometry>
        <box size="1.0 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="dark_grey">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_x_rail_left" type="fixed">
    <parent link="robot_base"/>
    <child link="x_rail_left"/>
    <origin xyz="0 -0.35 0.05" rpy="0 0 0"/>
  </joint>

  <link name="x_rail_right">
    <visual>
      <geometry>
        <box size="1.0 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="dark_grey">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_x_rail_right" type="fixed">
    <parent link="robot_base"/>
    <child link="x_rail_right"/>
    <origin xyz="0 0.35 0.05" rpy="0 0 0"/>
  </joint>

  <link name="x_carriage">
    <visual>
      <geometry>
        <box size="0.1 0.8 0.08"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="orange">
        <color rgba="1.0 0.5 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.8 0.08"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="x_joint" type="prismatic">
    <parent link="robot_base"/>
    <child link="x_carriage"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.4" upper="0.4" effort="100" velocity="0.5"/>
  </joint>

  <link name="y_carriage">
    <visual>
      <geometry>
        <box size="0.08 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.0 0.4 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="y_joint" type="prismatic">
    <parent link="x_carriage"/>
    <child link="y_carriage"/>
    <origin xyz="0 0 0.09" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.3" upper="0.3" effort="100" velocity="0.5"/>
  </joint>

  <link name="z_column">
    <visual>
      <geometry>
        <box size="0.06 0.06 0.6"/>
      </geometry>
      <origin xyz="0 0 -0.25" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0.0 0.6 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.06 0.06 0.6"/>
      </geometry>
      <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="z_joint" type="prismatic">
    <parent link="y_carriage"/>
    <child link="z_column"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.5" upper="0.1" effort="100" velocity="0.5"/>
  </joint>

  <link name="end_effector">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="red">
        <color rgba="0.8 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="effector_joint" type="fixed">
    <parent link="z_column"/>
    <child link="end_effector"/>
    <origin xyz="0 0 -0.55" rpy="0 0 0"/>
  </joint>

  <link name="tool0"/>

  <joint name="effector_to_tool0" type="fixed">
    <parent link="end_effector"/>
    <child link="tool0"/>
    <origin xyz="0 0 -0.025" rpy="0 0 0"/>
  </joint>

</robot>
